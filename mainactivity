package com.example.currcnverter;
import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.Button;
import android.widget.EditText;
import android.widget.Spinner;
import android.widget.Toast;
import com.example.currcnverter.sweth.RetrofitBuilder;
import com.example.currcnverter.sweth.RetrofitInterface;
import com.google.gson.JsonObject;
import retrofit2.Call;
import retrofit2.Callback;
import retrofit2.Response;

import static java.lang.Double.*;


public class MainActivity extends AppCompatActivity implements AdapterView.OnItemSelectedListener {
Button button;
EditText currConverted;
EditText currToBeConverted;
Spinner cFrom;
Spinner cT0;
    private Object JsonObject;
    private Object Call;



    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);
        currToBeConverted = (EditText) findViewById(R.id.Amount);
        currConverted = (EditText) findViewById(R.id.result);
        button = (Button) findViewById(R.id.convert);
        cFrom = (Spinner) findViewById(R.id.fromspin);
        cT0 = (Spinner) findViewById(R.id.tospin);
        String[] dropDownList = {"USD", "INR","EUR","NZD"};
        ArrayAdapter<String> adapter = new ArrayAdapter<String>(this, R.layout.support_simple_spinner_dropdown_item, dropDownList);
        cFrom.setAdapter(adapter);
        cT0.setAdapter(adapter);

        button.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                RetrofitInterface retrofitInterface = RetrofitBuilder.getRetrofitInstance().create(RetrofitInterface.class);
                Call<com.google.gson.JsonObject> call = retrofitInterface.getExchangeCurrency("conversion_rates");
                call.enqueue(new Callback<com.google.gson.JsonObject>() {
                    @Override
                    public void onResponse(retrofit2.Call<com.google.gson.JsonObject> call, Response<com.google.gson.JsonObject> response) {
                        com.google.gson.JsonObject res = response.body();
                        JsonObject cone = res.getAsJsonObject("conversion_rates");
                        double conversion_rates = valueOf(currToBeConverted.getText().toString());
                        double multiplier = Double.parseDouble(cone.get(cT0.getSelectedItem().toString()).toString());
                        double result;
                        result = conversion_rates * multiplier;
                        currConverted.setText(String.valueOf(result));
                          Toast.makeText(v.getContext(), "value :"+currConverted,Toast.LENGTH_SHORT).show();
                    }

                    @Override
                    public void onFailure(retrofit2.Call<com.google.gson.JsonObject> call, Throwable t) {
                    }
                });
            }
        });}

    @Override
    public void onItemSelected(AdapterView<?> parent, View view, int position, long id) {

    }

    @Override
    public void onNothingSelected(AdapterView<?> parent) {

    }
}
